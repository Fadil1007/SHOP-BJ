{% extends 'admin/base.html.twig' %}

{% block title %}Sélecteur de Logo | Admin SHOP BJ{% endblock %}

{% block body %}
<h1 class="mb-4">Sélecteur de Logo</h1>
    <div class="row mb-5">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Logo actuel</h5>
                </div>
                <div class="card-body text-center">
                    <img src="{{ asset(current_logo) }}" alt="Logo actuel" class="img-fluid mb-3" style="max-height: 100px;">
                    <p class="mb-0 text-muted">Chemin: {{ current_logo }}</p>
                </div>
            </div>
        </div>
    </div>
    
    <h2 class="mb-3">Choisir un nouveau logo</h2>
    
    <h4 class="mt-4 mb-3">Logos originaux</h4>
    <div class="row g-4 mb-5">
        <!-- Logo Géométrique -->
        <div class="col-md-4">
            <div class="card h-100 {% if current_logo == 'uploads/logo/logo-geometric.svg' %}border-primary{% endif %}">
                <div class="card-header {% if current_logo == 'uploads/logo/logo-geometric.svg' %}bg-primary text-white{% endif %}">
                    <h5 class="mb-0">Style Géométrique</h5>
                </div>
                <div class="card-body text-center">
                    <img src="{{ asset('uploads/logo/logo-geometric.svg') }}" alt="Logo Géométrique" class="img-fluid mb-3" style="max-height: 80px;">
                    
                    <form action="{{ path('admin_update_logo') }}" method="post" class="mt-3">
                        <input type="hidden" name="logo_path" value="uploads/logo/logo-geometric.svg">
                        <button type="submit" class="btn {% if current_logo == 'uploads/logo/logo-geometric.svg' %}btn-outline-primary{% else %}btn-primary{% endif %} btn-sm">
                            {% if current_logo == 'uploads/logo/logo-geometric.svg' %}Logo actuel{% else %}Sélectionner{% endif %}
                        </button>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Logo Moderne -->
        <div class="col-md-4">
            <div class="card h-100 {% if current_logo == 'uploads/logo/logo-new.svg' %}border-primary{% endif %}">
                <div class="card-header {% if current_logo == 'uploads/logo/logo-new.svg' %}bg-primary text-white{% endif %}">
                    <h5 class="mb-0">Style Moderne</h5>
                </div>
                <div class="card-body text-center">
                    <img src="{{ asset('uploads/logo/logo-new.svg') }}" alt="Logo Moderne" class="img-fluid mb-3" style="max-height: 80px;">
                    
                    <form action="{{ path('admin_update_logo') }}" method="post" class="mt-3">
                        <input type="hidden" name="logo_path" value="uploads/logo/logo-new.svg">
                        <button type="submit" class="btn {% if current_logo == 'uploads/logo/logo-new.svg' %}btn-outline-primary{% else %}btn-primary{% endif %} btn-sm">
                            {% if current_logo == 'uploads/logo/logo-new.svg' %}Logo actuel{% else %}Sélectionner{% endif %}
                        </button>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Logo Minimaliste -->
        <div class="col-md-4">
            <div class="card h-100 {% if current_logo == 'uploads/logo/logo-minimal.svg' %}border-primary{% endif %}">
                <div class="card-header {% if current_logo == 'uploads/logo/logo-minimal.svg' %}bg-primary text-white{% endif %}">
                    <h5 class="mb-0">Style Minimaliste</h5>
                </div>
                <div class="card-body text-center">
                    <img src="{{ asset('uploads/logo/logo-minimal.svg') }}" alt="Logo Minimaliste" class="img-fluid mb-3" style="max-height: 80px;">
                    
                    <form action="{{ path('admin_update_logo') }}" method="post" class="mt-3">
                        <input type="hidden" name="logo_path" value="uploads/logo/logo-minimal.svg">
                        <button type="submit" class="btn {% if current_logo == 'uploads/logo/logo-minimal.svg' %}btn-outline-primary{% else %}btn-primary{% endif %} btn-sm">
                            {% if current_logo == 'uploads/logo/logo-minimal.svg' %}Logo actuel{% else %}Sélectionner{% endif %}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mt-4 mb-3">Nouveaux logos tendance</h4>
    <div class="row g-4">
        <!-- Logo Fashion -->
        <div class="col-md-4">
            <div class="card h-100 {% if current_logo == 'uploads/logo/logo-fashion.svg' %}border-primary{% endif %}">
                <div class="card-header {% if current_logo == 'uploads/logo/logo-fashion.svg' %}bg-primary text-white{% endif %}">
                    <h5 class="mb-0">Style Coloré</h5>
                </div>
                <div class="card-body text-center">
                    <img src="{{ asset('uploads/logo/logo-fashion.svg') }}" alt="Logo Fashion" class="img-fluid mb-3" style="max-height: 80px; background-color: white; padding: 8px; border-radius: 4px;">
                    
                    <form action="{{ path('admin_update_logo') }}" method="post" class="mt-3">
                        <input type="hidden" name="logo_path" value="uploads/logo/logo-fashion.svg">
                        <button type="submit" class="btn {% if current_logo == 'uploads/logo/logo-fashion.svg' %}btn-outline-primary{% else %}btn-primary{% endif %} btn-sm">
                            {% if current_logo == 'uploads/logo/logo-fashion.svg' %}Logo actuel{% else %}Sélectionner{% endif %}
                        </button>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Logo Élégant -->
        <div class="col-md-4">
            <div class="card h-100 {% if current_logo == 'uploads/logo/logo-elegant.svg' %}border-primary{% endif %}">
                <div class="card-header {% if current_logo == 'uploads/logo/logo-elegant.svg' %}bg-primary text-white{% endif %}">
                    <h5 class="mb-0">Style Élégant</h5>
                </div>
