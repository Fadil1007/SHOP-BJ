                    <img src="{{ asset('uploads/logo/logo-elegant.svg') }}" alt="Logo Élégant" class="img-fluid mb-3" style="max-height: 80px; background-color: white; padding: 8px; border-radius: 4px;">
                    
                    <form action="{{ path('admin_update_logo') }}" method="post" class="mt-3">
                        <input type="hidden" name="logo_path" value="uploads/logo/logo-elegant.svg">
                        <button type="submit" class="btn {% if current_logo == 'uploads/logo/logo-elegant.svg' %}btn-outline-primary{% else %}btn-primary{% endif %} btn-sm">
                            {% if current_logo == 'uploads/logo/logo-elegant.svg' %}Logo actuel{% else %}Sélectionner{% endif %}
                        </button>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Logo Luxe -->
        <div class="col-md-4">
            <div class="card h-100 {% if current_logo == 'uploads/logo/logo-luxury.svg' %}border-primary{% endif %}">
                <div class="card-header {% if current_logo == 'uploads/logo/logo-luxury.svg' %}bg-primary text-white{% endif %}">
                    <h5 class="mb-0">Style Luxe</h5>
                </div>
                <div class="card-body text-center">
                    <img src="{{ asset('uploads/logo/logo-luxury.svg') }}" alt="Logo Luxe" class="img-fluid mb-3" style="max-height: 80px; background-color: white; padding: 8px; border-radius: 4px;">
                    
