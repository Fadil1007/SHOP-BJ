{% extends 'base.html.twig' %}

{% block title %}Redirection vers la réinitialisation - SHOP BJ{% endblock %}

{% block body %}
<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h1 class="h4 mb-0">Redirection en cours...</h1>
                </div>
                <div class="card-body text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Chargement...</span>
                    </div>
                    <p class="mt-3">Vous êtes redirigé vers la page de réinitialisation du mot de passe...</p>
                    
                    <form id="tokenForm" action="{{ path('app_reset_password', {'token': token}) }}" method="post" style="display:none">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('reset_form') }}">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Soumettre le formulaire automatiquement après un court délai
    document.addEventListener('DOMContentLoaded', function() {
        setTimeout(function() {
            document.getElementById('tokenForm').submit();
        }, 1000); // 1 seconde de délai pour que l'utilisateur puisse voir le spinner
    });
</script>
{% endblock %}