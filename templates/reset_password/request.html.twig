{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe - SHOP BJ{% endblock %}

{% block body %}
<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h1 class="h4 mb-0">Réinitialisation du mot de passe</h1>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        Entrez votre adresse email pour recevoir un lien de réinitialisation de votre mot de passe.
                    </p>

                    {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" type="submit">
                                Envoyer le lien de réinitialisation
                            </button>
                        </div>
                    {{ form_end(requestForm) }}

                    <hr class="my-4">
                    <div class="text-center">
                        <p>
                            <a href="{{ path('app_login') }}" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-2"></i>Retour à la connexion
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}